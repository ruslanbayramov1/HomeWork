@using _14_MVCTodos.Controllers
@using _14_MVCTodos.Models

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <div class="container mt-5">
        <h1 class="mb-4 text-center">Create Todo</h1>
        <form method="post" action="/Admin/Create">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input id="title" name="Title" type="text" class="form-control" />
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <input id="description" name="Description" type="text" class="form-control" />
            </div>
            <div class="mb-3">
                <label for="deadline" class="form-label">Deadline</label>
                <input id="deadline" name="Deadline" type="datetime-local" class="form-control" />
            </div>
            <div class="mb-3">
                <label for="team" class="form-label">Team</label>
                <select id="team" name="TeamId" class="form-select">
                    @foreach (var data in Model)
                    {
                        <option selected value="@data.Id">
                            @data.Name
                        </option>
                    }
                </select>
            </div>
            <button class="btn btn-primary">Create</button>
        </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
